{
  "manifest_version": 3,
  "name": "AI Chat Extension",
  "version": "1.0",
  "description": "A Chrome extension for AI-powered chat functionality",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "styles.css", "script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
